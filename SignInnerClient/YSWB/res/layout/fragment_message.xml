	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:orientation="vertical"
	            android:layout_marginRight="10dp">
	            
	            <RelativeLayout 
	                android:layout_width="match_parent"
