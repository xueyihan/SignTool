<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:background="#00bfff"
	    android:layout_weight="1">
	    <TextView 
	        android:id="@+id/infor_cancel_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:text="取消 "
	        android:textColor="#ffffff"
	        android:layout_margin="10dp"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:text="个人信息"
	        android:textColor="#ffffff"
	        android:textSize="20sp"/>
	    <TextView 
	        android:id="@+id/next_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:text="下一步 "
	        android:textColor="#ffffff"
	        android:layout_margin="10dp"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="10">
	    
	    <LinearLayout 
	       	android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:orientation="vertical">
	        
	        <RelativeLayout
	            android:id="@+id/register_school"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:background="#ffffff"
	            android:layout_marginTop="10dp">
	            <ImageView 
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:layout_centerVertical="true"
	            	android:layout_alignParentRight="true"
	            	android:src="@drawable/rightarrow_picture"
	            	android:layout_marginRight="10dp"/>
	            <TextView
	                android:id="@+id/register_school_text" 
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:layout_marginLeft="10dp"
	            	android:layout_centerVertical="true"
	            	android:layout_alignParentLeft="true"
	            	android:text="学校"
	            	android:textSize="16sp"/>
	        </RelativeLayout>
	        <RelativeLayout
	            android:id="@+id/register_date"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:background="#ffffff"
	            android:layout_marginTop="10dp">
	            <ImageView 
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:layout_centerVertical="true"
	            	android:layout_alignParentRight="true"
	            	android:src="@drawable/rightarrow_picture"
	            	android:layout_marginRight="10dp"/>
	            <TextView
	                android:id="@+id/register_date_text" 
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:layout_marginLeft="10dp"
	            	android:layout_centerVertical="true"
	            	android:layout_alignParentLeft="true"
	            	android:text="入学年份"
	            	android:textSize="16sp"/>
	        </RelativeLayout>
	        <RelativeLayout
	            android:id="@+id/register_major"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:background="#ffffff"
	            android:layout_marginTop="10dp">
	            <ImageView 
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:layout_centerVertical="true"
	            	android:layout_alignParentRight="true"
	            	android:src="@drawable/rightarrow_picture"
	            	android:layout_marginRight="10dp"/>
	            <TextView
	                android:id="@+id/register_major_text" 
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:layout_marginLeft="10dp"
	            	android:layout_centerVertical="true"
	            	android:layout_alignParentLeft="true"
	            	android:text="专业"
	            	android:textSize="16sp"/>
	        </RelativeLayout>
	        <RelativeLayout
	            android:id="@+id/register_class"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:background="#ffffff"
	            android:layout_marginTop="10dp">
	            <ImageView 
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:layout_centerVertical="true"
	            	android:layout_alignParentRight="true"
	            	android:src="@drawable/rightarrow_picture"
	            	android:layout_marginRight="10dp"/>
	            <TextView
	                android:id="@+id/register_class_text" 
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:layout_marginLeft="10dp"
	            	android:layout_centerVertical="true"
	            	android:layout_alignParentLeft="true"
	            	android:text="班级"
	            	android:textSize="16sp"/>
	        </RelativeLayout>
	        <RelativeLayout
	            android:id="@+id/register_number"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:background="#ffffff"
	            android:layout_marginTop="10dp">
	            <ImageView 
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:layout_centerVertical="true"
	            	android:layout_alignParentRight="true"
	            	android:src="@drawable/rightarrow_picture"
	            	android:layout_marginRight="10dp"/>
	            <TextView
	                android:id="@+id/register_number_text" 
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:layout_marginLeft="10dp"
	            	android:layout_centerVertical="true"
	            	android:layout_alignParentLeft="true"
	            	android:text="学号"
	            	android:textSize="16sp"/>
	        </RelativeLayout>
	        
	        <LinearLayout
	            android:id="@+id/register_name"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:background="#ffffff"
	            android:layout_marginTop="10dp"
	            android:orientation="horizontal">
	            <TextView
	                android:id="@+id/register_name_text" 
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:layout_marginLeft="10dp"
	            	android:layout_centerVertical="true"
	            	android:text="姓名:"
	            	android:textSize="16sp"/>
	            <EditText 
	                android:id="@+id/info_name"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:background="#ffffff"/>
	            
	        </LinearLayout>
	        
	    </LinearLayout>
	   	
	   
	    
	</RelativeLayout>
</LinearLayout>
